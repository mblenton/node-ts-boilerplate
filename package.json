{
  "name": "node-ts-boilerplate",
  "version": "1.0.0",
  "description": "node.js TypeScript Boilerplate",
  "main": "/dist/server.js",
  "scripts": {
    "start": "npm run serve",
    "clean": "shx rm -rf dist/",
    "build": "npm run clean && npm run tslint && npm run build-ts && npm run copy-static-assets",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "test": "NODE_ENV=test mocha --opts ./mocha.opts $(find . -name 'test_*.spec.ts' ! -ipath '*node_modules*') -t 5000 --exit",
    "cover": "nyc npm test",
    "tslint": "tslint -c ./tslint.json -p ./tsconfig.json",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.json.ts",
      "**/dist/**",
      "src/server.ts",
      "copyStaticAssets.ts"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mblenton/node-ts-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "typescript",
    "node.js",
    "mocha",
    "chai",
    "istambul",
    "express",
    "prettier",
    "vscode",
    "tslint"
  ],
  "author": "Milan Rakos",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "4.17.1",
    "express-handlebars": "^5.1.0",
    "express-validator": "^6.6.1",
    "morgan": "^1.10.0",
    "supertest": "^4.0.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.12",
    "@types/compression": "1.7.0",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.8",
    "@types/express-handlebars": "3.1.0",
    "@types/mocha": "8.0.3",
    "@types/morgan": "^1.9.1",
    "@types/node": "14.6.4",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.10",
    "concurrently": "^5.3.0",
    "mocha": "8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "2.1.1",
    "shelljs": "^0.8.4",
    "shx": "^0.3.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "4.0.2"
  }
}
