{
  "name": "node-typescript-boilerplate-starter",
  "version": "1.0.0",
  "description": "node.js TypeScript Boilerplate / Starter",
  "main": "/dist/server.js",
  "scripts": {
    "start": "npm run serve",
    "clean": "shx rm -rf dist/",
    "build": "npm run clean && npm run tslint && npm run build-ts && npm run copy-static-assets",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "test": "NODE_ENV=test mocha --opts ./mocha.opts $(find . -name 'test_*.spec.ts' ! -ipath '*node_modules*') -t 5000 --exit",
    "cover": "nyc npm test",
    "tslint": "tslint -c ./tslint.json -p ./tsconfig.json",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.json.ts",
      "**/dist/**",
      "src/server.ts",
      "copyStaticAssets.ts"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mblenton/node-ts-boilerplate.git"
  },
  "keywords": [
    "typescript boilerplate",
    "typescript starter",
    "node.js",
    "mocha",
    "chai",
    "istambul",
    "express",
    "prettier",
    "vscode",
    "tslint"
  ],
  "author": "Milan Rakos",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "compression": "^1.7.4",
    "dotenv": "^8.1.0",
    "errorhandler": "^1.5.1",
    "express": "4.17.1",
    "express-handlebars": "^3.1.0",
    "express-validator": "^6.2.0",
    "morgan": "^1.9.1",
    "supertest": "^4.0.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.10.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.1",
    "@types/compression": "1.0.1",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.1",
    "@types/express-handlebars": "0.0.33",
    "@types/mocha": "5.2.7",
    "@types/morgan": "^1.7.37",
    "@types/node": "12.7.4",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.8",
    "concurrently": "^4.1.2",
    "mocha": "6.2.0",
    "nodemon": "^1.19.2",
    "nyc": "^14.1.1",
    "prettier": "1.18.2",
    "shelljs": "^0.8.3",
    "shx": "^0.3.2",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.6.2"
  }
}
